<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp"
    app:cardBackgroundColor="#C9E0EA"
    app:cardCornerRadius="8dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >


    <ImageView
        android:id="@+id/gorsel"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/ic_baseline_menu_book_24"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:layout_toEndOf="@id/gorsel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@id/delete_update">

        <TextView
            android:padding="5dp"
            android:id="@+id/personname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ad覺"
            android:textSize="20dp"
            />
        <TextView
            android:padding="5dp"
            android:id="@+id/personnumara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numara"
            android:textSize="20dp"
            />
        <TextView
            android:padding="5dp"
            android:id="@+id/personclass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="S覺n覺f覺"
            android:textSize="20dp"
            />
        <TextView
            android:padding="5dp"
            android:id="@+id/aldigitariha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tarih"
            android:textSize="20dp"
            />
        <TextView
            android:padding="5dp"
            android:id="@+id/idrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="id"
            android:textSize="20dp"
            />


    </LinearLayout>
    <ImageButton
        android:id="@+id/delete_update"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_more_vert_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C9E0EA"/>


</RelativeLayout>
</androidx.cardview.widget.CardView>